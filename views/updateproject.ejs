<% include ./partials/header.ejs %>
  
<form action="/editproject/<%= project._id %>?_method=PUT" method="POST">
  <div class="form-group">
    <label for="newIdea"><%= project.newIdea %></label>
  </div>
  <div class="form-group">
    <label for="budget">Change Budget: Current Budget is <%= project.budget %></label>
    <input class="form-control" type="text" name="budget" id="budget" value="<%= project.budget%>">
    <% project.supplies.forEach(function(supply) { %>
        <% if(supply) {%>
          <div class="col-lg-3 col-md-4 col-xs-6 thumb">
          <label for="supply">Supply</label>
    		<input class="form-control" type="text" name="project[supplyName]" id="budget" value="<%= supply.supplyName%>">
    		<input class="form-control" type="text" name="project[cost]" id="budget" value="<%= supply.cost%>">
          </div>
          <% } %>
        <% }); %>
  </div>
  
  <input class="btn btn-default" type="submit">
  <a class="btn btn-default" href="/addpicture" role="button">Look for ideas</a>
  <a class="btn btn-default" href="/addsupplies" role="button">Add Supplies</a>


</form>

<% include ./partials/footer.ejs %>