<% include ./partials/header.ejs %>

<h3>Project list</h3>
<div class="card-group">
  <% console.log('posts', JSON.stringify(posts, null, '\t')) %>
  <% for (var i = 0; i < posts.length; i++) { %>
    <div class="card" style="width: 20rem;">
        <% console.log('post', JSON.stringify(posts[i].pictures, null, '\t')) %>
        <img class="card-img-top" src="<%= posts[i].pictures %>">
    
    <div class="card-block">
      <h4 class="card-title"><%= posts[i].newIdea %></h4>
      <h4></h4>
      <ul class="list-group list-group-flush">
          <li class="list-group-item"><%= posts[i].supplies %></li>
      </ul>
      <a href="/editproject/<%= posts[i]._id %>" class="btn btn-primary">Edit Project</a>
      <form action="/deleteproject/<%= posts[i]._id %>?_method=DELETE" method="POST">
        <button class="">Delete</div></button>
      </form>
    </div>
  </div>
  <% } %>
  
</div>
<% include ./partials/footer.ejs %>