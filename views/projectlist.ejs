
<% include ./partials/header.ejs %>
<div class="container-fluid">
<h3>Project list</h3>
  <div class="row">

    <div class="card-group">

        <% for(var i=0; i < posts.length; i++) { %>
          <div class="col-sm-6 col-md-6 col-lg-6">
          <div class="card text-center" style="width: 20rem;">
            <div class="card-block">
              <h4 class="card-title"><%= posts[i].newIdea %></h4>
              <a href="/editproject/<%= posts[i]._id %>" class="btn btn-primary">Edit Project</a>
              <a href="/showsupplies/<%= posts[i]._id %>" class="btn btn-primary">Show Supplies</a>
              <a href="/showprojectpictures/<%= posts[i]._id %>" class="btn btn-primary">Show Project Ideas</a>
              <a href="/addpicturestoproject/<%= posts[i]._id %>" class="btn btn-primary">Look for ideas</a>
              <form action="/deleteproject/<%= posts[i]._id %>?_method=DELETE" method="POST">
                <button class="">Delete</div></button>
              </form>
            </div>
          </div>
          </div>
        <% } %>   

    </div>
   
  </div>
</div>
<% include ./partials/footer.ejs %>
